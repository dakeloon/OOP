using System;

namespace Laba
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Выберите файл, 1-MsWord, 2-Excel");
            int i;
            i = Convert.ToInt32(Console.ReadLine());
            ElectronicDocument File = new ElectronicDocument();
            File.NameFile = "Лабораторная работа";
            File.Author = "Семен Гращенко";
            Console.WriteLine(File.Author);
            Console.WriteLine(File.NameFile);
            if (i == 1)
            {
                MsWord Word = new MsWord();
                Word.Numberofwords = 100;
                Console.WriteLine(Word.Numberofwords);
            }
            if (i == 2)
            {
                Excel Table = new Excel();
                Table.Cells = 23000;
                Console.WriteLine(Table.Cells);
            }

        }
    }

    class ElectronicDocument
    {
        public string NameFile, Author;

    }

    class MsWord:ElectronicDocument
    {
        public int Numberofwords;
    }
    class Excel : ElectronicDocument
    {
        public int Cells;
    }
}
